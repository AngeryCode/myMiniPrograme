<view class="tabs-container">
    <view class="tabs-title" >
        <view wx:for="{{tabs}}" wx:key="id" 
        class="{{item.isActive ? 'active' : ''}}"
        bind:tap="handleTabTap"
        data-index="{{item.id}}"
        >
            {{item.value}}
        </view>
    </view>
    <view class="tabs-content">
        <slot></slot>
    </view>
</view>
