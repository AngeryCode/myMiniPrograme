.categary-container {
  height: 100vh;
}
.categary-container .scroll-view-container {
  height: calc(100vh - 90rpx);
  display: flex;
}
.categary-container .scroll-view-container .left-scroll {
  flex: 2;
}
.categary-container .scroll-view-container .left-scroll view {
  display: flex;
  justify-content: center;
  height: 80rpx;
  align-items: center;
  font-size: 30rpx;
}
.categary-container .scroll-view-container .left-scroll .active {
  color: var(--themeColor);
  border-left: 5rpx solid currentColor;
}
.categary-container .scroll-view-container .right-scroll {
  flex: 5;
}
.categary-container .scroll-view-container .right-scroll .cat-group .cat-name {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}
.categary-container .scroll-view-container .right-scroll .cat-group .cat-name .line {
  color: #ccc;
  padding: 0 10rpx;
}
.categary-container .scroll-view-container .right-scroll .cat-group .cat-list {
  display: flex;
  flex-wrap: wrap;
}
.categary-container .scroll-view-container .right-scroll .cat-group .cat-list navigator {
  width: 33.33%;
  text-align: center;
}
